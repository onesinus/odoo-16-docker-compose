<odoo>
    <data>
      <record id="view_api_token_tree" model="ir.ui.view">
          <field name="name">api.token.tree</field>
          <field name="model">api.token</field>
          <field name="arch" type="xml">
              <tree>
                <field name="user_id" />
                <field name="api_token" />
              </tree>
          </field>
      </record>

        <record id="view_api_token_form" model="ir.ui.view">
            <field name="name">api.token.form</field>
            <field name="model">api.token</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="user_id" required="1" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="api_token" readonly="1"/>
                            <button string="Regenerate Token" name="regenerate_token" type="object" class="oe_highlight"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
